# /etc/default/grub

GRUB_DEFAULT=0
GRUB_TIMEOUT=3
GRUB_DISTRIBUTOR="Arch"
GRUB_CMDLINE_LINUX="quiet apparmor=1 security=apparmor lockdown=integrity lsm=lockdown,yama,apparmor"
GRUB_CMDLINE_LINUX_DEFAULT="audit=1 force_randomize=on"
#GRUB_DISABLE_OS_PROBER=true
GRUB_DISABLE_RECOVERY=false
GRUB_GFXMODE=auto
GRUB_GFXPAYLOAD_LINUX=keep
GRUB_TERMINAL_INPUT=console
