# /etc/default/grub

GRUB_TIMEOUT=3
GRUB_DEFAULT=0
GRUB_DISTRIBUTOR="Arch-X"
GRUB_CMDLINE_LINUX_DEFAULT="quiet apparmor=1 security=apparmor lockdown=integrity lsm=lockdown,yama,apparmor"
GRUB_CMDLINE_LINUX="audit=1 module.sig_enforce=1 force_randomize=on"
GRUB_DISABLE_RECOVERY=false
GRUB_TERMINAL=console
GRUB_GFXMODE=auto
