# /etc/default/grub

GRUB_DEFAULT=0
GRUB_DISTRIBUTOR="Arch"
GRUB_CMDLINE_LINUX_DEFAULT="quiet apparmor=1 security=apparmor lockdown=integrity lsm=lockdown,yama,apparmor"
GRUB_CMDLINE_LINUX="audit=1 module.sig_enforce=1 force_randomize=on"
GRUB_DISABLE_RECOVERY=true
GRUB_GFXMODE=auto
GRUB_GFXPAYLOAD_LINUX=keep
GRUB_TERMINAL_INPUT=console
GRUB_TIMEOUT=3
GRUB_TIMEOUT_STYLE=menu
