<?xml version="1.0" encoding="UTF-8"?>

<!--
A beautiful blue-green color palette with no background so it will always match your system theme, hence the name "Chameleon". Works best with dark themes. Compatible with Gedit, Kwrite, Mousepad, Xed.. etc.
-->

<style-scheme id="chameleon" _name="Chameleon" version="1.0">

  <author>https://github.com/kuladog/</author>
  <_description>Background will match your system theme</_description>

  <!-- Colour Palette c2 8cd9b3 -->
  <color name="charcoal"                    value="#1a1a1a"/>
  <color name="gunsmoke1"                   value="#e6e6e6"/>
  <color name="gunsmoke2"                   value="#a6a6a6"/>
  <color name="gunsmoke3"                   value="#666666"/>
  <color name="honeybell"                   value="#f4ca16"/>
  <color name="keylime"                     value="#e8f48c"/>
  <color name="matcha1"                     value="#c8cbae"/>
  <color name="matcha2"                     value="#a8ad7f"/>
  <color name="matcha3"                     value="#7fad84"/>
  <color name="palemoon1"                   value="#ad7fa8"/>
  <color name="palemoon2"                   value="#8a6586"/>
  <color name="scarletred"                  value="#cc0000"/>
  <color name="skyblue1"                    value="#938fb7"/>
  <color name="skyblue2"                    value="#847fad"/>
  <color name="yellow"                      value="#ffff00"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="gunsmoke1"/>
  <style name="selection"                   foreground="gunsmoke1" background="gunsmoke3"/>
  <style name="cursor"                      foreground="gunsmoke1"/>
  <style name="secondary-cursor"            foreground="gunsmoke2"/>
  <style name="current-line"                background="gunsmoke3"/>
  <style name="line-numbers"                foreground="gunsmoke2" background="charcoal"/>
  <style name="draw-spaces"                 foreground="gunsmoke2"/>
  <style name="background-pattern"          background="gunsmoke3"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="yellow"/>
  <style name="bracket-mismatch"            foreground="gunsmoke1" background="scarletred"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="gunsmoke1" background="gunsmoke3"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="gunsmoke1" background="matcha3"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gunsmoke2"/>
  <style name="def:shebang"                 foreground="gunsmoke2" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="skyblue1"/>
  <style name="def:string"                  foreground="skyblue2"/>
  <style name="def:special-char"            foreground="matcha3"/>
  <style name="def:special-constant"        foreground="palemoon2"/>
  <style name="def:floating-point"          foreground="palemoon1"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="matcha3"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="skyblue2" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="matcha2" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="matcha3"/>
  <style name="def:error"                   foreground="gunsmoke1" background="scarletred" bold="true"/>
  <style name="def:warning"                 foreground="gunsmoke1" background="honeybell"/>
  <style name="def:note"                    foreground="gunsmoke1" background="palemoon1" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Language Specific -->
  <style name="diff:added-line"             foreground="keylime"/>
  <style name="diff:removed-line"           foreground="honeybell"/>
  <style name="diff:changed-line"           foreground="palemoon1"/>
  <style name="diff:diff-file"              foreground="matcha2" bold="true"/>
  <style name="diff:location"               foreground="matcha1"/>
  <style name="diff:special-case"           foreground="palemoon1" bold="true"/>

  <style name="latex:command"               foreground="matcha1" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
