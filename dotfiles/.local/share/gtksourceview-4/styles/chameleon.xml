<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="chameleon" _name="Chameleon" version="1.0">

	<author>github.com/kuladog/chameleon-gtk-color-scheme</author>
	<_description>
		Beautiful blue-green color scheme that adapts to match any dark theme.
	</_description>

	<!-- Colour Palette -->
	<color name="beingreen1"                  value="#c8cbae"/>
	<color name="beingreen2"                  value="#9ec1a2"/>
	<color name="goldenrod1"                  value="#e8f48c"/>
	<color name="goldenrod2"                  value="#f5c71a"/>
	<color name="hibiscus"                    value="#cc0000"/>
	<color name="lavarock1"                   value="#2a2a2a"/>
	<color name="lavarock2"                   value="#1a1a1a"/>
	<color name="newtgreen"                   value="#34ffff"/>
	<color name="sandstone1"                  value="#e6e6e6"/>
	<color name="sandstone2"                  value="#a6a6a6"/>
	<color name="sandstone3"                  value="#494949"/>
	<color name="skyblue1"                    value="#e7e7ff"/>
	<color name="skyblue2"                    value="#b3b3ff"/>
	<color name="skyblue3"                    value="#8080ff"/>
	<color name="text_alt"                    value="#ffffe7"/>

	<!-- Global Settings -->
	<style name="text"                        foreground="skyblue1" background="lavarock1"/>
	<style name="selection"                   foreground="sandstone1" background="sandstone3"/>
	<style name="cursor"                      foreground="newtgreen"/>
	<style name="secondary-cursor"            foreground="sandstone2"/>
	<style name="current-line"                background="lavarock2"/>
	<style name="line-numbers"                foreground="sandstone2" background="lavarock2"/>
	<style name="draw-spaces"                 foreground="sandstone2"/>
	<style name="background-pattern"          background="lavarock2"/>

	<!-- Bracket Matching -->
	<style name="bracket-match"               foreground="goldenrod1" bold="true"/>
	<style name="bracket-mismatch"            foreground="sandstone2" background="hibiscus"/>

	<!-- Right Margin -->
	<style name="right-margin"                foreground="sandstone2"/>

	<!-- Search Matching -->
	<style name="search-match"                foreground="lavarock1" background="beingreen2" bold="true"/>

	<!-- Comments -->
	<style name="def:comment"                 foreground="#b3b3b3"/>
	<style name="def:shebang"                 foreground="#b3b3b3" bold="false"/>
	<style name="def:doc-comment-element"     italic="true"/>

	<!-- Constants -->
	<style name="def:constant"                foreground="skyblue3"/>
	<style name="def:string"                  foreground="beingreen2"/>
	<style name="def:special-char"            foreground="newtgreen"/>
	<style name="def:special-constant"        foreground="goldenrod1"/>
	<style name="def:floating-point"          foreground="goldenrod1"/>

	<!-- Identifiers -->
	<style name="def:identifier"              foreground="skyblue3"/>

	<!-- Statements -->
	<style name="def:statement"               foreground="skyblue2"/>

	<!-- Types -->
	<style name="def:type"                    foreground="beingreen2" bold="true"/>

	<!-- Others -->
	<style name="def:preprocessor"            foreground="beingreen2"/>
	<style name="def:error"                   foreground="sandstone1" background="hibiscus" bold="true"/>
	<style name="def:warning"                 foreground="goldenrod2" background="lavarock2" bold="true"/>
	<style name="def:note"                    foreground="greycloud2" background="lavarock2"/>
	<style name="def:underlined"              italic="true" underline="single"/>

	<!-- Language Specific -->
	<style name="diff:added-line"             foreground="goldenrod1"/>
	<style name="diff:removed-line"           foreground="goldenrod2"/>
	<style name="diff:changed-line"           foreground="newtgreen" bold="true"/>
	<style name="diff:diff-file"              foreground="goldenrod2" bold="true"/>
	<style name="diff:location"               foreground="beingreen1"/>
	<style name="diff:special-case"           foreground="goldenrod1" bold="true"/>

	<style name="latex:command"               foreground="beingreen1" bold="true"/>
	<style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
