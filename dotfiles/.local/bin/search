#!/usr/bin/env bash
#
#  Command: search
#  A quick search helper using 'find' utility

if [ -z "$2" ]; then
	directory="$(pwd)"
	filename="$1"
else
	directory="$1"
	filename="$2"
fi

if [ -z "$filename" ]; then
	echo " USAGE: $(basename $0) <directory> <filename>"
	exit 1
fi

find "$directory" -type f -iname "$filename"
