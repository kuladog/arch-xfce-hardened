# ~/.config/firejail/viewnior.local

include globals.local

net none
protocol unix

private-tmp
private-bin viewnior,jpegexiforient,jpegtran
private-lib imlib2,libjpeg,libpng,libtiff
private-etc

read-only ${HOME}
read-write ${HOME}/Downloads
read-write ${HOME}/Pictures

seccomp
seccomp.block-secondary
caps.drop all
nonewprivs
noroot
nogroups
no3d
nodvd
noinput
nosound
notv
nou2f
novideo

disable-mnt
restrict-namespaces

noexec /tmp
noexec ${HOME}

