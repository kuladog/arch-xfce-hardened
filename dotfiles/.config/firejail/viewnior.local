# ~/.config/firejail/viewnior.local

include ${HOME}/.config/firejail/global.local

net none
protocol unix

private-tmp
private-bin viewnior,jpegexiforient,jpegtran
private-lib imlib2,libjpeg,libpng,libtiff
private-etc

read-only ${HOME}
read-write ${HOME}/Pictures

noexec /tmp
noexec ${HOME}

caps.drop all
seccomp ptrace,open
nogroups
noroot
