# ~/.config/firejail/vlc.local

include globals.local

net none
protocol unix

private-tmp
private-bin vlc,vlc-wrapper,ffmpeg,dbus-launch,dbus-send
private-lib libvlc,libavcodec,libvpx,libvorbis,libmp3lame,libfdk-aac,libde265
private-etc

read-only ${HOME}

caps.drop all
seccomp
seccomp.block-secondary
disable-mnt
nonewprivs
noroot
nogroups

restrict-namespaces

private-cache
private-dev
