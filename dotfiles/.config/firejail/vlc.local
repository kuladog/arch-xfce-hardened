# ~/.config/firejail/vlc.local

include ${HOME}/.config/firejail/global.local

net none
protocol unix

private-tmp
private-bin vlc,vlc-wrapper,ffmpeg,dbus-launch,dbus-send
private-lib libvlc,libavcodec,libvpx,libvorbis,libmp3lame,libfdk-aac,libde265
private-etc

read-only ${HOME}

noexec /tmp
noexec ${HOME}

caps.drop all
seccomp ptrace,open
nogroups
noroot
