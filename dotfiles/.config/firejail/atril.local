# ~/.config/firejail/atril.local

include ${HOME}/.config/firejail/global.local

net none
protocol unix

private-tmp
private-bin atril,evince,libpoppler,libcairo,libjpeg
private-lib libpoppler,libcairo,libjpeg,libtiff
private-etc

read-only ${HOME}

noexec /tmp
noexec ${HOME}

caps.drop all
seccomp ptrace,open
noroot
nogroups
